@model Element

<div class="card card-body">
    <div class="bg-gray p-1">
        <h3>
            @Model.Title
            <span class="badge badge-pill badge-primary status">
                <small>@Model.Status</small>
            </span>
        </h3>
    </div>
    <div class="card bg-light text-dark p-1 description">
        <p>Typ nośnika: @Model.Carries</p>
        <p>Okładka: @Model.Cover</p>
        <p>Rok wydania: @Model.Year</p>
        <p>Autorzy: @Model.NameOfAuthors</p>
        <p>Opis: @Model.Description</p>
    </div>
</div>

